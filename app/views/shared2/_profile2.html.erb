<div class="col-md-3">
  <h2>User info</h2>
    <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class: "user") %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name%></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction%></th>
      </tr>
    </tbody>
  </table>
  <% if user != current_user %>
    <table class = "table">
      <tbody>
        <tr>
          <th>Follows</th>
          <th><%= link_to user.followings.count, user_followings_path(user.id) %></th>
        </tr>
        <tr>
          <th>Followers</th>
          <th><%= link_to user.followers.count, user_followers_path(user.id) %></th>
        </tr>
        <tr>
          <th>
            <% if current_user.following?(user) %>
              <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-g" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-f" %>
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>
  <% end %>
  <div class="row">
    <%= link_to "", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}"%>
  </div>
  <h1 class="mt-3">New book</h1>
  <%= form_with model: book,local:true do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class: "form-control book_title", name: "book[title]", id: "book_title" %>
    </div>
    <div class="form-group">
      <label for="book_body">Opinion</label>
      <%= f.text_area :body, class: "form-control book_body", name: "book[body]", id: "book_body"%>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
  <% end %>
</div>